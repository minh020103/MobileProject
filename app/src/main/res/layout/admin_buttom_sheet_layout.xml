<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/buttomSheet"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:paddingTop="0.3in"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="0.2in">

    <EditText
        android:id="@+id/ten_phuong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:hint="Nhập tên phường"
        android:gravity="center"
        android:background="@drawable/background_tienich"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/btnPhuong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Xác nhận"/>

    <Button
        android:id="@+id/btnKhoaPhuong"
        android:backgroundTint="@color/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khoá"
        android:visibility="gone"/>

</LinearLayout>
